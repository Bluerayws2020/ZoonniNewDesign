<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="30"
            android:toDegrees="30"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#2196F3" /> <!-- Fill color -->
            </shape>
        </rotate>
    </item>
    <item
        android:left="1dp"
        android:right="1dp">
        <rotate
            android:fromDegrees="30"
            android:toDegrees="30"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#2196F3" /> <!-- Fill color -->
            </shape>
        </rotate>
    </item>
    <item
        android:left="2dp"
        android:right="2dp">
        <rotate
            android:fromDegrees="30"
            android:toDegrees="30"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#2196F3" /> <!-- Fill color -->
            </shape>
        </rotate>
    </item>
    <!-- Add similar <item> elements to create the remaining sides of the hexagon -->
</layer-list>
